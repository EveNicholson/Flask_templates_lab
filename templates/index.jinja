{% extends 'base.jinja'%} {% block content %}
    <h1>{{ title }}</h1>


<form action="/events" method="post">
    <label for="name">Event name:</label>
    <input type="text" id="name" name="name">

    <label for="date_of_events">Date:</label>
    <input type="date" name="date" id="date_of_events">

    <label for="location">Location:</label>
    <input type="text" id="location" name="location">

    <label for="num_of_guests">Number of guests</label>
    <input type="num_of_guests" name="number_of_guests" id="num_of_guests">

    <label for="description">Description</label>
    <input type="text" id="description" name="description">

    <label for="recurring">Recurring:</label>
    <textarea name="recurring" id="recurring" rows="2" cols="30"></textarea>
    <input type="submit" value="Save">

    </form>

    <ul>
    {% for event in event_list  %}
        <li>{{ event.name }} {{ event.date }} {{ event.number_of_guest }} {{ event.location }} {{ event.description }}  {{ event.recurring }}</li>
    {% endfor %}</ul>
{% endblock content %}

